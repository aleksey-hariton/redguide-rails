<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><b><%= @organization.name%></b></h3>
      </div>

      <div class="box-body">

        <div class="box-widget">
          <h4 class="box-title">Environments</h4>
          <table class="table table-bordered table-striped table-hover">
            <% envs = @organization.environments
               envs.each do |e|%>
                <%= render partial: 'environments/environment', locals: {environment: e} %>
            <% end %>
          </table>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to 'Back', organizations_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
</div>

