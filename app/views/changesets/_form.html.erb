<%= form_for([changeset.project, changeset]) do |f| %>
<% if changeset.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h4><i class="icon fa fa-ban"></i> <%= pluralize(changeset.errors.count, "error") %> prohibited this changeset from being saved:</h4>

      <ul>
        <% changeset.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:action].capitalize %></h3>
      </div>

      <div class="box-body">
        <div class="form-group">
          <%= f.label :key, class: 'control-label' %>
          <%= f.text_field :key, class: "form-control", placeholder: 'key'.humanize %>
        </div>

        <div class="form-group">
          <%= f.label :description, class: 'control-label' %>
          <%= f.text_area :description, class: "form-control", placeholder: 'description'.humanize %>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to 'Back', project_path(changeset.project), class: 'btn btn-default' %>
        <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
<% end %>
