<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">

      <div class="box-body">
        <div class="row">
          <div class="col-md-4">

            <div class="user-block">
              <img class="img-circle img-bordered-sm" src="<%= user_avatar(64, changeset.author) %>" alt="User Image">
              <span class="username">
                <%= link_to changeset.author.name, admin_user_path(changeset.author) %>
              </span>
              <span class="description">Created: <%= time_ago_in_words(changeset.created_at) %> ago</span>
            </div>
          </div>

          <div class="col-md-3">
            <p><b>Changeset: </b><%= changeset.key %></p>
          </div>
          <div class="col-md-5">
            <p class="text-muted"><%= changeset.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>