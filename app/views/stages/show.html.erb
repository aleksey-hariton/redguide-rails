<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:controller].split('/').last.humanize %></h3>
      </div>

      <div class="box-body">
        <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @stage.name %></dd>

              <dt>Description</dt>
              <dd><%= @stage.description %></dd>

        </dl>

        Steps
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Icon</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @stage.steps.each do |step| %>
              <tr>
                <td><%= step.name %></td>
                <td><%= step.description %></td>
                <td><%= raw('<i class="fa fa-'+step.icon+'"></i>') %></td>
                <td>
                  <%= link_to raw('<i class="fa fa-eye"></i>'), [@project, @stage, step], class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_project_stage_step_path(@project, @stage, step), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-trash"></i>'), [@project, @stage, step], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
      <div class="box-footer">
        <%= link_to 'Back', edit_project_path(@project,tab: :stages), class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_project_stage_path(@project, @stage), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

