<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">Project configs</h3>
      </div>

      <div class="box-body">

        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @project_configs.each do |project_config| %>
              <tr>
                <td><%= project_config.name %></td>
                <td>
                  <%= link_to raw('<i class="fa fa-eye"></i>'), [@project, project_config], class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_project_project_config_path(@project, project_config), class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                  <%= link_to raw('<i class="fa fa-trash"></i>'), [@project, project_config], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-default btn-flat btn-start-process' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', project_path(@project), class: 'btn btn-default' %>
        <%= link_to 'New Project Config', new_project_project_config_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<br>

