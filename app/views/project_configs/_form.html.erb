<%= form_for([project, project_config]) do |f| %>
  <% if project_config.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h4><i class="icon fa fa-ban"></i> <%= pluralize(project_config.errors.count, "error") %> prohibited this project config from being saved:</h4>

      <ul>
        <% project_config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= params[:action].capitalize %></h3>
      </div>

      <div class="box-body">
        <div class="form-group">
          <%= f.label :name, class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'name'.humanize %>
        </div>

        <div class="form-group">
          <%= f.label :content, 'Content', class: 'control-label' %>
          <%= f.text_area :content, class: 'form-control', placeholder: 'Content', 'data-editor'=>'plain' %>
        </div>

      </div>

      <div class="box-footer">
        <%= link_to 'Back', project_project_configs_path, class: 'btn btn-default' %>
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<% end %>
